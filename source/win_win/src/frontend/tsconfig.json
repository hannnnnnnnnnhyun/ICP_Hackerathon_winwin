{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@reducer/*": ["src/reducers/*"],
      "@helper/*": ["src/helpers/*"],
      "@container/*": ["src/containers/*"],
      "@type/*": ["src/types/*"],
      "@action/*": ["src/actions/*"]
    }
  },
  "include": [
    "./*", 
    "src/helper/*",
    "src/containers/*" ,
    "src/types/*"
  ],
}
